<UserControl x:Class="MartinezAI.WPFApp.Forms.UserControls.LoginUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MartinezAI.WPFApp.Forms.UserControls"
             xmlns:vm="clr-namespace:MartinezAI.WPFApp.ViewModels.UserControls"
             xmlns:converters="clr-namespace:MartinezAI.WPFApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:LoginUCViewModel, IsDesignTimeCreatable=True}"
             Background="{DynamicResource AppBackgroundBrush}">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border
            CornerRadius="12"
            Background="{DynamicResource SurfaceBrush}"
            Padding="28"
            Margin="14">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <TextBlock Grid.Row="0"
                           Text="Welcome"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="{DynamicResource MainFontForegroundBrush}" />

                <!-- EMAIL -->
                <TextBlock Grid.Row="1"
                           Text="Email"
                           FontSize="14"
                           Margin="0,20,0,0"
                           Foreground="{DynamicResource SecondaryFontBrush}"/>
                <TextBox Grid.Row="2"
                         x:Name="emailTextBox"
                         Text="{Binding Email}"
                         Background="{DynamicResource InputBackgroundBrush}"
                         Foreground="{DynamicResource InputForegroundBrush}"
                         BorderBrush="{DynamicResource ContainerBorderBrush}"
                         FontSize="16"
                         Padding="8"
                         BorderThickness="1"
                         Width="250"
                         Margin="0,2,0,0" />
                <CheckBox Grid.Row="3"
                          Content="Remember me"
                          Foreground="{DynamicResource SecondaryFontBrush}"
                          HorizontalAlignment="Right"
                          Margin="0,2,0,0"
                          IsChecked="{Binding SaveUserName}"/>

                <!-- PASSWORD -->
                <TextBlock Grid.Row="4"
                           Text="Password"
                           FontSize="14"
                           Margin="0,10,0,0"
                           Foreground="{DynamicResource SecondaryFontBrush}" />
                <PasswordBox Grid.Row="5"
                             x:Name="passwordBox" Password="Fantasy#2001"
                             FontSize="16"
                             Padding="8"
                             BorderThickness="1"
                             Margin="0,2,0,0"
                             Background="{DynamicResource InputBackgroundBrush}"
                             Foreground="{DynamicResource InputForegroundBrush}"
                             BorderBrush="{DynamicResource ContainerBorderBrush}"
                             KeyDown="PasswordBox_KeyDown"/>

                <!-- LOGIN BUTTON -->
                <Button Grid.Row="6"
                        Margin="0,10,0,0"
                        Content="Sign In"
                        FontSize="16"
                        Style="{DynamicResource RoundedButtonStyle}" 
                        Click="SignIn_Click"/>

                <!-- LOGIN ERROR -->
                <TextBlock Grid.Row="7"
                           Text="Invalid Email or Password!"
                           Margin="0,10,0,0"
                           FontSize="14"
                           Foreground="{DynamicResource ErrorBrush}" 
                           Visibility="{Binding InvalidLoginIsVisible, Converter={StaticResource boolToVisibilityConverter}}"/>

            </Grid>
        </Border>
    </Grid>

</UserControl>
