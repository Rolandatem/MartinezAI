<Application x:Class="MartinezAI.WPFApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MartinezAI.WPFApp">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionaries/GlobalStyles.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/GlobalButton.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/IconTemplates.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/TabControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="Font_Roboto">pack://application:,,,/Fonts/#Roboto</FontFamily>

            <Style TargetType="Control">
                <Setter Property="FontFamily" Value="{StaticResource Font_Roboto}" />
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource Font_Roboto}" />
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontFamily" Value="{StaticResource Font_Roboto}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
    
</Application>
