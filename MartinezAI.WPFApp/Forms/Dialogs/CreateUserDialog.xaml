<Window x:Class="MartinezAI.WPFApp.Forms.Dialogs.CreateUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MartinezAI.WPFApp.Forms.Dialogs"
        xmlns:vm="clr-namespace:MartinezAI.WPFApp.ViewModels.Dialogs"
        xmlns:converters="clr-namespace:MartinezAI.WPFApp.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:CreateUserDialogViewModel, IsDesignTimeCreatable=True}"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{DynamicResource AppBackgroundBrush}">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="InputLabel">
            <Setter Property="Foreground" Value="{DynamicResource SecondaryFontBrush}" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Width" Value="200" />
        </Style>
        <Style TargetType="TextBox" x:Key="InputValue">
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource InputForegroundBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="0,2,0,0" />
            <Setter Property="MaxWidth" Value="200" />
        </Style>
        <Style TargetType="TextBlock" x:Key="ErrorLabel">
            <Setter Property="Margin" Value="0,2,0,0" />
            <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <converters:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
    </Window.Resources>

    <Border Background="{DynamicResource SurfaceBrush}" 
            CornerRadius="12" 
            Padding="20"
            Margin="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="15" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- FIRST NAME -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="First Name"
                       Style="{StaticResource InputLabel}"/>
            <TextBox Grid.Row="1" Grid.Column="0"
                     Style="{StaticResource InputValue}" 
                     Text="{Binding FirstName}"/>
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="Required"
                       Style="{StaticResource ErrorLabel}" 
                       Visibility="{Binding FirstNameRequiredIsVisible, Converter={StaticResource boolToVisibilityConverter}}"/>

            <!-- LAST NAME -->
            <TextBlock Grid.Row="0" Grid.Column="2"
                       Text="Last Name"
                       Style="{StaticResource InputLabel}" />
            <TextBox Grid.Row="1" Grid.Column="2" 
                     Style="{StaticResource InputValue}" 
                     Text="{Binding LastName}" />
            <TextBlock Grid.Row="2" Grid.Column="2"
                       Text="Required"
                       Style="{StaticResource ErrorLabel}" 
                       Visibility="{Binding LastNameRequiredIsVisible, Converter={StaticResource boolToVisibilityConverter}}" />

            <!-- EMAIL -->
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="Email"
                       Margin="0,10,0,0"
                       Style="{StaticResource InputLabel}" />
            <TextBox Grid.Row="3" Grid.Column="0"
                     Style="{StaticResource InputValue}" 
                     Text="{Binding Email}" />
            <TextBlock Grid.Row="4" Grid.Column="0"
                       Text="Required"
                       Style="{StaticResource ErrorLabel}" 
                       Visibility="{Binding EmailRequiredIsVisible, Converter={StaticResource boolToVisibilityConverter}}"/>

            <!-- PASSWORD -->
            <TextBlock Grid.Row="2" Grid.Column="2"
                       Text="Password"
                       Margin="0,10,0,0"
                       Style="{StaticResource InputLabel}" />
            <TextBox Grid.Row="3" Grid.Column="2"
                     Style="{StaticResource InputValue}" 
                     Text="{Binding Password}" />

            <!-- GENERATE PASSWORD LINK -->
            <StackPanel Grid.Row="4" Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Generate Password"
                        VerticalAlignment="Top"
                        FontSize="12"
                        Margin="0,2,0,0"
                        Style="{DynamicResource LinkButtonStyle}" 
                        Command="{Binding OnGeneratePasswordCommand, Mode=OneWay}"/>
                <TextBlock Text="Required"
                           Style="{StaticResource ErrorLabel}"
                           Margin="5,2,0,0" 
                           Visibility="{Binding PasswordRequiredIsVisible, Converter={StaticResource boolToVisibilityConverter}}"/>
            </StackPanel>

            <!-- IS ADMIN -->
            <TextBlock Grid.Row="4" Grid.Column="0"
                       Margin="0,10,0,0"
                       Text="Is Admin"
                       Style="{StaticResource InputLabel}" />
            <StackPanel Grid.Row="5" Grid.Column="0" 
                        Orientation="Horizontal"
                        Margin="0,2,0,0">
                <TextBlock Text="No"
                           Foreground="{DynamicResource MainFontForegroundBrush}"
                           VerticalAlignment="Center"
                           FontSize="12" />
                <ToggleButton Grid.Row="5" Grid.Column="0"
                              Width="60"
                              Style="{DynamicResource ToggleSwitchStyle}"
                              HorizontalAlignment="Left" 
                              IsChecked="{Binding IsAdmin}"/>
                <TextBlock Text="Yes"
                           Foreground="{DynamicResource MainFontForegroundBrush}"
                           VerticalAlignment="Center"
                           FontSize="12" />
            </StackPanel>
            
            <!-- ACTION BUTTONS -->
            <StackPanel Grid.Row="6" Grid.ColumnSpan="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="CREATE"
                        Style="{DynamicResource RoundedButtonStyle}"
                        Width="100" 
                        Command="{Binding OnCreateUserCommand, Mode=OneWay}"/>
                <Button Content="CANCEL"
                        Style="{DynamicResource RoundedButtonStyle}"
                        Width="100"
                        Margin="10,0,0,0" 
                        Command="{Binding OnCancelCommand, Mode=OneWay}"/>
            </StackPanel>

        </Grid>

    </Border>
    
    
    
</Window>
