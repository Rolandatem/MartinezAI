<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tools="clr-namespace:MartinezAI.WPFApp.Tools">

    <!-- INFORMATION ICON -->
    <DataTemplate x:Key="InfoIconTemplate">
        <Grid Width="40" Height="40">
            <!-- Blue circle -->
            <Ellipse Width="40" Height="40" Fill="{DynamicResource PrimaryAccentBrush}"/>
            <!-- i vertical bar -->
            <Path Data="M20,14 L20,27"
              Stroke="{DynamicResource MainFontForegroundBrush}"
              StrokeThickness="3"
              StrokeStartLineCap="Round"
              StrokeEndLineCap="Round"/>
            <!-- i dot -->
            <Ellipse Width="4" Height="4" Fill="{DynamicResource MainFontForegroundBrush}" 
                 HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        </Grid>
    </DataTemplate>

    <!-- WARNING ICON -->
    <DataTemplate x:Key="WarningIconTemplate">
        <Grid Width="40" Height="40">
            <!-- Yellow triangle -->
            <Path Data="M20,5 L35,35 L5,35 Z"
              Fill="{DynamicResource WarningBrush}" />
            <!-- Exclamation line -->
            <Path Data="M20,15 L20,27"
              Stroke="Black"
              StrokeThickness="3"
              StrokeStartLineCap="Round"
              StrokeEndLineCap="Round"/>
            <!-- Exclamation dot -->
            <Ellipse Width="4" Height="4" Fill="Black"
                 HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,28,0,0"/>
        </Grid>
    </DataTemplate>

    <!-- ERROR ICON -->
    <DataTemplate x:Key="ErrorIconTemplate">
        <Grid Width="40" Height="40">
            <!-- Red triangle -->
            <Path Data="M20,5 L35,35 L5,35 Z"
              Fill="{DynamicResource ErrorBrush}" />
            <!-- Exclamation line -->
            <Path Data="M20,15 L20,27"
              Stroke="White"
              StrokeThickness="3"
              StrokeStartLineCap="Round"
              StrokeEndLineCap="Round"/>
            <!-- Exclamation dot -->
            <Ellipse Width="4" Height="4" Fill="White"
                 HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,28,0,0"/>
        </Grid>
    </DataTemplate>


    <!-- Add a TemplateSelector -->
    <tools:IconTemplateSelector x:Key="IconTemplateSelector"
          InfoTemplate="{StaticResource InfoIconTemplate}"
          WarningTemplate="{StaticResource WarningIconTemplate}"
          ErrorTemplate="{StaticResource ErrorIconTemplate}"/>

</ResourceDictionary>