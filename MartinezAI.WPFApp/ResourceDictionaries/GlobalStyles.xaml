<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- BASE COLORS & BRUSHES -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FF161A23" />
    <!-- Very dark navy -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FF23283A" />
    <!-- Primary container -->
    <SolidColorBrush x:Key="CardBrush" Color="#FF242E3D" />
    <!-- Secondary containers/cards -->
    <SolidColorBrush x:Key="ListItemBrush" Color="#FF2C3549" />
    <!-- Muted mid-dark blue-gray, lighter than CardBrush/SurfaceBrush -->
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FF3D4A6A" />
    <!-- Lighter panel background for containers (higher contrast, stays easy on eyes) -->
    <SolidColorBrush x:Key="DarkBrush" Color="#FF202123" />

    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#FF3399FF" />
    <!-- Vibrant blue (core accent) -->
    <SolidColorBrush x:Key="AccentLightBrush" Color="#FF4DB8FF" />
    <!-- Lighter blue (hover/highlight) -->
    <SolidColorBrush x:Key="AccentDarkBrush" Color="#FF236EB3" />
    <!-- Deeper blue for active/pressed -->

    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#FF6F98F7" />
    <!-- Soft blue-lavender, for variety -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#FF1CC88A" />
    <!-- Positive (green for success) -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#FFFF5660" />
    <!-- Negative (soft red for errors) -->
    <SolidColorBrush x:Key="WarningBrush" Color="#FFF9E072" />
    <!-- Warning (golden yellow) -->

    <SolidColorBrush x:Key="ContainerBorderBrush" Color="#FF425B78" />
    <!-- Muted blue for borders -->

    <SolidColorBrush x:Key="MainFontForegroundBrush" Color="#FFF7FAFC" />
    <!-- Near-white for high contrast -->
    <SolidColorBrush x:Key="SecondaryFontBrush" Color="#FFAEC2DA" />
    <!-- Muted/secondary text -->
    <SolidColorBrush x:Key="DisabledBrush" Color="#FF6B7280" />
    <!-- Disabled elements -->

    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FF21283C" />
    <!-- Input fields -->
    <SolidColorBrush x:Key="InputForegroundBrush" Color="#FFF7FAFC" />
    <!-- Input text color -->

    <!-- HOVER STATES -->
    <SolidColorBrush x:Key="HoverOverlayBrush" Color="#26FFFFFF" />
    <!-- Subtle highlight/hover -->
    <SolidColorBrush x:Key="PressedOverlayBrush" Color="#44FFFFFF" />
    <!-- Stronger press/active effect -->
    
    <!-- TAB CONTROLS -->
    <SolidColorBrush x:Key="UnSelectedTabBackgroundBrush" Color="#FF454857" />
    <SolidColorBrush x:Key="UnSelectedTabBorderBrush" Color="#FF373A45" />
    <SolidColorBrush x:Key="HoverTabBackgroundBrush" Color="#FF62667C" />
    <SolidColorBrush x:Key="HoverTabBorderBrush" Color="#FF525664" />

</ResourceDictionary>