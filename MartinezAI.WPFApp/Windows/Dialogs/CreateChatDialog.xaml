<Window x:Class="MartinezAI.WPFApp.Windows.Dialogs.CreateChatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MartinezAI.WPFApp.Windows.Dialogs"
        xmlns:vm="clr-namespace:MartinezAI.WPFApp.ViewModels"
        mc:Ignorable="d"
        Title="Create Chat"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Width="450"
        WindowStartupLocation="CenterOwner"
        Foreground="{DynamicResource MainFontForegroundBrush}"
        Background="{DynamicResource AppBackgroundBrush}">

    <Window.DataContext>
        <vm:CreateChatDialogViewModelDesign />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Chat Title: (empty for auto)" />
            <TextBox Text="{Binding ChatTitle}" Margin="0,2,0,0"/>

            <TextBlock Text="How do you want the AI to act? (empty for generic)" Margin="0,5,0,0" />
            <TextBox Text="{Binding ChatContext}" 
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     Height="100"
                     TextWrapping="Wrap" Margin="0,2,0,0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="START" Width="75" />
                <Button Content="CANCEL" Width="75" Margin="10,0,0,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
